@model BlockChainPaymentSystem.Models.CultureModel.ChargeModel
@{
}
<style>
    body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, textarea, p, blockquote, th, td, p, iframe, figure, a, input {
        margin: 0;
        padding: 0;
    }

    * {
        font-family: "맑은 고딕","Malgun Gothic",dotum,'돋움', sans-serif !important;
    }

    .form-list td {
        position: relative;
        width: 390px;
        min-height: 60px;
        padding: 10px 28px;
        background-position: left top;
        background-repeat: repeat-y;
        color: #555;
        background-color: #fff;
        border-bottom: 1px solid #e5e5e5;
        font-size: 14px;
    }

    .form-list input {
        float: left;
        width: 50px;
        height: 25px;
        padding: 0 18px;
        border: 1px solid #D3D2D2;
        font-size: 16px;
        margin: 0px 3px 0px 0px;
    }

    .form-line {
        border-bottom: 1px solid;
        border-top: 1px solid;
        border-color: #e51937;
        margin-left: 15px;
        margin-top: 10px;
    }

    table {
        font-size: inherit;
        border-collapse: separate;
        border-spacing: 0;
        table-layout: fixed;
    }

    tbody {
        display: table-row-group;
        vertical-align: middle;
        border-color: inherit;
    }

    tr {
        display: table-row;
        vertical-align: inherit;
        border-color: inherit;
    }

    h2 {
        font-size: 30px;
        color: #333;
        font-weight: 400;
        letter-spacing: -0.085em;
        line-height: 1;
        margin-top: 5px;
        margin-left: 15px;
        margin-bottom: 20px;
    }

    .article {
        margin-left: 40px;
        margin-right: 40px;
        padding-top: 30px;
        background-position: left bottom;
        background-repeat: repeat-x;
        text-align: center;
    }

    .btn.primary {
        background-color: #e6000f;
    }

    .btn.primary {
        float: left;
        display: block;
        min-width: 250px;
        height: 50px;
        margin-left: 50px;
        margin-right: 5px;
        padding: 0 30px;
        border-radius: 100px;
        font-size: 17px;
        color: #fff;
        line-height: 50px;
        letter-spacing: -0.085em;
        -webkit-transition: transform .2s, box-shadow .2s;
        -o-transition: transform .2s, box-shadow .2s;
        transition: transform .2s, box-shadow .2s;
    }

    .main {
        width: 450px;
    }
</style>
<script>

    var charge = function () {
